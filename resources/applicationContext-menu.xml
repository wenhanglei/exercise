<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">

	<bean name="menuAction" class="org.wenhanglei.auth.menu.web.MenuAction" scope="prototype">
		<property name="menuEbi" ref="menuEbi"/>
	</bean>

	<bean name="menuEbi" class="org.wenhanglei.auth.menu.business.ebo.MenuEbo">
		<property name="menuDao" ref="menuDao"/>
	</bean>

	<bean name="menuDao" class="org.wenhanglei.auth.menu.dao.impl.MenuDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

</beans>
	
