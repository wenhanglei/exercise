<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <package name="default" namespace="/" extends="struts-default">
        
        <interceptors>
            <interceptor name="AuthInterceptor" class="authInterceptor"/>
            <interceptor-stack name="auth">
                <interceptor-ref name="AuthInterceptor"></interceptor-ref>
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="auth"></default-interceptor-ref>

        <global-results>
            <result name="login">/WEB-INF/jsps/login.jsp</result>
            <result name="error">/WEB-INF/jsps/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>
        </global-exception-mappings>

        <!--部门-->
        <action name="dept_*" class="deptAction" method="{1}">
            <result name="list">/WEB-INF/jsps/dept/list.jsp</result>
            <result name="insert">/WEB-INF/jsps/dept/input.jsp</result>
            <result name="toList" type="redirectAction">dept_list</result>
        </action>

        <!--职员-->
        <action name="emp_*" class="empAction" method="{1}">
            <result name="main">/WEB-INF/jsps/main.jsp</result>
            <result name="toLogin" type="redirectAction">login</result>
            <result name="list">/WEB-INF/jsps/emp/list.jsp</result>
            <result name="toList" type="redirectAction">emp_list</result>
            <result name="input">/WEB-INF/jsps/emp/input.jsp</result>
        </action>

        <!--角色-->
        <action name="role_*" class="roleAction" method="{1}">
            <result name="list">/WEB-INF/jsps/role/list.jsp</result>
        </action>

        <!--资源-->
        <action name="resource_*" class="resourceAction" method="{1}">
            <result name="list">/WEB-INF/jsps/resource/list.jsp</result>
        </action>

        <!--菜单-->
        <action name="menu_*" class="menuAction" method="{1}">
            <result name="list">/WEB-INF/jsps/menu/list.jsp</result>
        </action>

        <action name="login">
            <result>/WEB-INF/jsps/login.jsp</result>
        </action>
        
        <action name="pages_*_*">
            <result>/WEB-INF/jsps/{1}/{2}.jsp</result>
        </action>

    </package>

</struts>
